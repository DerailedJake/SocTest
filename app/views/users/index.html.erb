<div class="container">
  <div class="row row-cols-2 row-cols-sm-2 row-cols-md-3 g-3">
    <% @users.each do |user| %>
      <div class="col">
        <div class="card" style="width: 18rem;">
          <div class="card-body">
            <p class="card-text"><%= user.email %></p>
            <%= link_to user.email, profile_path(user) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

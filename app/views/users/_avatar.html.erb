<% if avatar.representable? %>
  <div>
    <%= image_tag avatar.representation(resize_to_limit: [size, size]), class: "rounded-circle flex-shrink-0" %>
  </div>
<% else %>
  <svg class="bd-placeholder-img rounded-circle" width="<%= size %>" height="<%= size %>" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="var(--bs-secondary-color)"></rect></svg>
<% end %>
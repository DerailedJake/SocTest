<%= turbo_frame_tag "comment-#{comment.id}", class: "ms-2 me-auto" do %>
  <div class="col">
    <ul class="list-group text-start">
      <li class="list-group-item d-flex justify-content-between align-items-start">
        <% if author.avatar.representable? %>
          <%= image_tag author.avatar.representation(resize_to_limit: [48, 48]), class: "me-1" %>
        <% else %>
          <svg class="bd-placeholder-img rounded-circle" width="48" height="48" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="var(--bs-secondary-color)"></rect></svg>
        <% end %>
        <div class="ms-2 me-auto">
          <div>
            <%= link_to author.full_name, profile_path(author), class: 'fw-bold', target: '_top' %>
            <%= formatted_comment_time(comment) %>
            <% if author == current_user %>
              <%= link_to 'Edit', edit_comment_path(comment), class: 'fw-bold' %>
              <%= link_to 'Delete', comment_path(comment), class: 'fw-bold',
                          data: { turbo_method: 'delete', turbo_confirm: 'Really?' } %>
            <% end %>
            <%= render partial: 'likes/likes_for_likeable', locals: { likeable: comment } %>
          </div>
          <p><%= comment.body %></p>
        </div>
      </li>
    </ul>
  </div>
<% end %>
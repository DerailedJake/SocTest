<%= turbo_frame_tag "comment-#{@comment.id}" do %>
  <div class="col">
    <ul class="list-group text-start">
      <li class="list-group-item d-flex justify-content-between align-items-start">
        <% if @comment.user.avatar.representable? %>
          <%= image_tag @comment.user.avatar.representation(resize_to_limit: [48, 48]), class: "me-1" %>
        <% else %>
          <svg class="bd-placeholder-img rounded-circle" width="48" height="48" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="var(--bs-secondary-color)"></rect></svg>
        <% end %>
        <div id="comment-form-container-<%= @comment.post.id %>" class="col form-div">
          <div class="input">
            <%= form_with model: @comment, id: "comment-form-#{@comment.post.id}", local: false do |f| %>
              <div class="input-group">
                <%= f.hidden_field 'post_id', value: @comment.post.id %>
                <%= f.text_field :body, value: @comment.body, class: "form-control rounded-corner", placeholder: "Write a comment..." %>
                <span class="input-group-btn p-l-10">
                  <%= f.submit "Edit", class: "btn btn-primary f-s-12" %>
                </span>
              </div>
            <% end %>
          </div>
        </div>
      </li>
    </ul>
  </div>
<% end %>
<main>
  <div class="py-5 col-lg-6 col-md-8 mx-auto text-center">
    <h1>
      LifeBook Tags
    </h1>
    <hr class="featurette-divider">
  </div>
  <div id="tag-list" class="px-lg-5 container">
    <div class="d-flex gap-2 justify-content-center">
      <% @tags.each do |tag| %>
        <%= render tag %>
      <% end %>
    </div>
  </div>
  <hr class="featurette-divider">
</main>

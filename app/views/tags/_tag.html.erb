<% small_pill ||= false %>
<% show_count ||= false %>
<% if small_pill %>
  <%= link_to show_tag_path(tag.name) do %>
    <span class="badge text-bg-info rounded-pill">
      <%= tag.name %>
    </span>
  <% end %>
<% elsif show_count %>
  <%= link_to show_tag_path(tag.name), class: "btn btn-info rounded-pill px-3 m-1" do %>
    <%= "#{tag.name} - #{tag.taggable_count}" %>
  <% end %>
<% else %>
  <%= link_to show_tag_path(tag.name), class: "btn btn-info rounded-pill px-3 m-1" do %>
    <%= tag.name %>
  <% end %>
<% end %>


<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %> alert-dismissible fade show fixed-top alert-dismissible fade show m-1" role="alert">
    <%= value %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
  <script>
    setTimeout((function() {
        $('.alert').fadeOut('slow');
    }), 1500);
  </script>
<% end %>

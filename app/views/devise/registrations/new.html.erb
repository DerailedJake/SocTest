<div class="py-lg-4 col-lg-6 col-md-8 mx-auto">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="text-center">
      <h2 class="h3 mb-3 fw-normal">Register</h2>
    </div><br />

    <div class="input-group">
      <%= f.file_field :avatar, class: "form-control", placeholder:"" %>
    </div><br />

    <div class="form-floating">
      <%= f.text_field :first_name, class: "form-control", placeholder:"" %>
      <%= f.label :first_name %>
    </div><br />

    <div class="form-floating">
      <%= f.text_field :last_name, class: "form-control", placeholder:""  %>
      <%= f.label :last_name %>
    </div><br />

    <div class="form-floating">
      <%= f.text_area :description, class: "form-control", placeholder:""  %>
      <%= f.label :description %>
    </div><br />

    <div class="form-floating">
      <%= f.select :status, User.available_states, {}, class: "form-select" %>
      <%= f.label :status %>
    </div><br />

    <div class="form-floating">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder:"" %>
      <%= f.label :email %>
    </div><br />

    <div class="form-floating">
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder:"" %>
      <%= f.label :password %>
    </div><br />

    <div class="form-floating">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder:"" %>
      <%= f.label :password_confirmation %>
    </div><br />

    <div class="form-floating">
      <%= f.submit "Sign up", class: 'btn btn-primary w-100 py-2' %>
    </div><br />
  <% end %>

  <%= render "devise/shared/links" %>
</div>


<div class="py-lg-4 col-lg-6 col-md-8 mx-auto">
  <div class="text-center">
    <h2 class="h3 mb-3 fw-normal">Edit profile</h2>
  </div><br />
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="input-group">
      <%= f.file_field :avatar, class: "form-control", placeholder:"" %>
    </div><br />

    <div class="form-floating">
      <%= f.text_field :first_name, class: "form-control", placeholder:"" %>
      <%= f.label :first_name %>
    </div><br />

    <div class="form-floating">
      <%= f.text_field :last_name, class: "form-control", placeholder:""  %>
      <%= f.label :last_name %>
    </div><br />

    <div class="form-floating">
      <%= f.text_area :description, class: "form-control", placeholder:""  %>
      <%= f.label :description %>
    </div><br />

    <div class="form-floating">
      <%= f.select :status, User.available_states, {}, class: "form-select" %>
      <%= f.label :status %>
    </div><br />

    <div class="form-floating">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder:"" %>
      <%= f.label :email %>
    </div><br />

    <i>Leave blank if you don't want to change it</i>
    <div class="form-floating">
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder:"" %>
      <%= f.label :password %>
    </div><br />

    <div class="form-floating">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder:"" %>
      <%= f.label :password_confirmation %>
    </div><br />

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <i>We need your current password to confirm your changes</i>
    <div class="form-floating">
      <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control", placeholder:"" %>
      <%= f.label :current_password %> <br />
    </div><br />

    <div class="form-floating">
      <%= f.submit "Update", class: 'btn btn-primary w-100 py-2' %>
    </div><br />
  <% end %>

  <div class="text-center form-floating">
    <h3>Cancel my account</h3>

    <div>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name),
                                data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" },
                                method: :delete, class: 'btn btn-secondary' %>
    </div><br /><br />

    <%= link_to "Back", :back, class: 'btn btn-primary' %>
  </div>
</div>

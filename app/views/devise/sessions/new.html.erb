<div class="py-lg-4 col-lg-6 col-md-8 mx-auto">
  <div class="text-center">
    <p>Example user:</p>
    <p>email: 'asdf@asdf.asdf',</p>
    <p>password: 'qwerqwer'</p>

    <h2 class="h3 mb-3 fw-normal">Log in</h2>
  </div><br />
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-floating">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder:"" %>
      <%= f.label :email %>
    </div><br />

    <div class="form-floating">
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder:"" %>
      <%= f.label :password %><br />
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-check">
        <%= f.check_box :remember_me, class: "form-check-input" %>
        <%= f.label :remember_me, class: "form-check-label" %>
      </div>
    <% end %>

    <div class="form-floating">
      <%= f.submit "Log in", class: 'btn btn-primary w-100 py-2' %>
    </div><br />
  <% end %>

  <%= render "devise/shared/links" %>
</div>

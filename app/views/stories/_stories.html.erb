<div id="stories_list" class="container">
<%= turbo_frame_tag 'turbo-stories' do %>
  <div class="col-lg-6 col-md-8 mx-auto text-center">
    <h2><%= "#{author.full_name} stories:" %></h2>
  </div>
  <div id="story-pagination" class="py-lg-5 col-lg-6 col-md-8 mx-auto text-center">
    <%== pagy_bootstrap_nav @pagy_stories %>
  </div>
  <div class="row row-cols-sm-1 row-cols-md-2 row-cols-lg-3 g-3 justify-content-md-center">
    <% stories.each do |story| %>
      <%= render partial: 'stories/story', locals: { author: author, story: story } %>
    <% end %>
  </div>
<% end %>
</div>

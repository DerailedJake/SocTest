<div class="py-4 d-flex align-items-center flex-column col text-center">
  <div class="card text-center" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title"><%= story.title %></h5>
      <p class="card-text"><%= story.description %></p>
      <% if author != current_user %>
        <p><%= link_to author.full_name, profile_path(author) %></p>
      <% end %>
      <p><%= link_to "See story", story_path(story), class: "btn btn-primary" %></p>
    </div>
  </div>
</div>
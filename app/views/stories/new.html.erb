<h2 class="text-center">New Story</h2>

<%= form_with model: @story do |f| %>

  <div class="mb-3">
    <i>Story title:</i>
    <%= f.text_field :title, value: @story.title, class: "form-control" %>
  </div>
  <div class="mb-3">
    <i>Story description:</i>
    <%= f.text_area :description, value: @story.description, class: "form-control" %>
  </div>

  <div class="input-group mb-3">
    <%= f.text_field :tags, class: "form-control", onchange: "this.form.requestSubmit()" %>
  </div>

  <div class="actions col-auto text-center">
    <%= f.submit "Create", class: "btn btn-primary" %>
  </div>
<% end %>

<%= form_with url: search_tags_url, method: :post do |f| %>
  <% f.text_field :tags, class: "form-control", oninput: "debounce(this.form.requestSubmit(),250)" %>
<% end %>

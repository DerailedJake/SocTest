<div class="col">
  <div id="post-<%= post.id %>" class="card post-buttons-parent" style="width: 18rem; min-height: 8rem">
    <div class="post-buttons-container justify-content-between align-items-center"
         style="position: absolute; width: 18rem">
      <div class="btn-group">
        <%= link_to "View post", post_path(post.id), class:"btn btn-sm btn-primary" %>
      </div>
      <% if current_user == author %>
        <div class="btn-group">
          <button type="button" class="btn btn-sm btn-secondary">Edit</button>
          <button type="button" class="btn btn-sm btn-secondary">Delete</button>
        </div>
      <% end %>
    </div>
    <% if post.picture.representable? %>
      <%= image_tag post.picture.representation(resize_to_fill: [286, 180]), style: "height: 180px"%>
    <% end %>
    <div class="card-body">
      <p class="card-text"><%= post.body %></p>
      <% if author != current_user %>
        <%= link_to author.full_name, profile_path(author) %>
      <% end %>
    </div>
    <div id="post-comments-<%= post.id %>">
      <%= render partial: 'comments/comments', locals: { post: post, comments: post.latest_comments } %>
    </div>
  </div>
</div>
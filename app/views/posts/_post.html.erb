<div class="col">
  <div id="post-<%= post.id %>" class="card" style="width: 18rem;">
    <% if post.picture.representable? %>
      <%= image_tag post.picture.representation(resize_to_fill: [286, 120]), style: "height: 180px" %>
    <% end %>

    <div class="card-body">
      <p class="card-text"><%= post.body %></p>
      <% if author != current_user %>
        <%= link_to author.full_name, profile_path(author) %>
      <% end %>
    </div>
    <div id="post-comments-<%= post.id %>">
      <% if post.comments.any? %>
        <%= render partial: 'comments/comments', locals: { post: post, comments: post.comments.order("created_at DESC").page(1).per(3) } %>
      <% end %>
    </div>
  </div>
</div>
<div class="list-group-item list-group-item-action d-flex gap-3 py-2">
  <div class="d-flex gap-2 w-100">
    <div>
      <%= render partial: 'users/avatar', locals: { avatar: message.user.avatar, size: 40 } %>
    </div>
    <div>
      <p>
        <%= message.content %>
      </p>
    </div>
  </div>
  <small class="opacity-50 text-nowrap">
    <%= message.created_at.strftime('%H:%M') %>
  </small>
</div>

<% scroll_down ||= false %>
<% if scroll_down %>
  <%= turbo_stream.action(:scroll_messages, "turbo-chat-inside") %>
<% end %>

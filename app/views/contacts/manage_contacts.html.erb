<main>
  <div class="py-5 col-lg-6 col-md-8 mx-auto text-center">
    <h1>
      Your contacts:
    </h1>
    <hr class="featurette-divider">
  </div>

  <div class="list-group container col-sm-12 col-lg-6">
    <% if @contacts.any? %>
      <%== pagy_bootstrap_nav @pagy_contacts %>
      <div class="list-group list-group-flush border-bottom scrollarea">
        <% @contacts.each do |contact| %>
          <%= render 'users/small', user: contact.acquaintance %>
        <% end %>
      </div>
    <% else %>
      <div class="list-group list-group-flush border-bottom scrollarea">
        <div class="list-group-item list-group-item-action d-flex gap-3 py-2">
          <h6 class="mb-0">
            You have no contacts yet!
          </h6>
        </div>
      </div>
    <% end %>
  </div>
  
  <hr class="featurette-divider">
</main>



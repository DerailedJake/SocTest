<%= turbo_frame_tag "turbo-like-#{@like.likeable_type}-#{@like.likeable_id}", loading: 'lazy', target: '_top' do %>
  <%= @likeable.likes.count %>
  <% if current_user %>
    <%= link_to(likes_path(like: { likeable_id: @like.likeable_id, likeable_type: @like.likeable_type }),
                data: { turbo_method: 'post' }) do %>
      <%= render_heart(@liked) %>
    <% end %>
  <% else %>
    <%= render_heart %>
  <% end %>
<% end %>

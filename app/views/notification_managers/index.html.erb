<main>
  <div class="py-5 col-lg-6 col-md-8 mx-auto text-center">
    <h1>
      Notifications:
    </h1>
    <hr class="featurette-divider">
  </div>

  <div class="list-group container col-sm-12 col-lg-6">
    <% if @notifications.any? %>
      <%== pagy_bootstrap_nav @pagy_notifications %>
      <% @notifications.each do |notif| %>
        <%= link_to notif.link, class: 'list-group-item list-group-item-action d-flex gap-3 py-3' do %>
          <div class="d-flex gap-2 w-100 justify-content-between">
            <div>
              <h6 class="mb-0"><%= notif.message %></h6>
            </div>
            <small class="opacity-50 text-nowrap"><%= time_ago_in_words(notif.created_at) %> ago</small>
          </div>
        <% end %>
      <% end %>
    <% else %>
      <h4 class="text-center">
        You have no notifications
      </h4>
    <% end %>
  </div>

  <hr class="featurette-divider">
</main>
